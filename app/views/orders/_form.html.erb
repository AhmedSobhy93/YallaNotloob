<%= form_for @order, url: orders_path, html: { multipart: true } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
  
    <%= f.label :order_for %><br>
    <%= f.select :order_for, [['Breakfast','breakfast'],['Lunch','lunch'],['Dinner','dinner']] %>
  </div>

  <div class="field">
    <%= f.label :resturant %><br>
    <%= f.text_field :resturant %>
  </div>
  <!-- Menu Image  -->
  <div class="field">
    <%= f.label :'Menu Image' %><br>
    <%= f.file_field :avatar %>
  </div><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
